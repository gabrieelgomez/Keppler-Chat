- objects.each do |conversation|
  %tr{ id: "row-#{conversation.id}" }
    %td.item-check{ style: 'width: 10%' }
      - if can?(KepplerChat::Conversation).destroy_multiple?
        .checkbox
          %label{ for: "checkbox-#{conversation.id}" }
            %input{ type:"checkbox", id: "checkbox-#{conversation.id}", 'checklist-model' => 'check', 'checklist-value' => "#{conversation.id}", '@click' => "listDelete(#{conversation.id})"}
            %span.cr
              %i.cr-icon.glyphicon.glyphicon-ok
    %td.hidden-xs
      = link_to admin_chat_conversation_path(conversation, search: @query), remote: true, class: 'show-row' do
        %span
          = conversation.recipient_id
    %td.hidden-xs
      = link_to admin_chat_conversation_path(conversation, search: @query), remote: true, class: 'show-row' do
        %span
          = conversation.sender_id
    %td{ style: 'width: 15px;padding-right:15px;' }
      %a.action-btn.pull-right{:id => "menu-#{conversation.id}", "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown"}
        %i.icon-options-vertical
      %ul.actions.dropdown-menu{"aria-labelledby" => "menu-#{conversation.id}" }
        - if can?(KepplerChat::Conversation).index?
          %li
            = link_to admin_chat_conversation_path(conversation), class: 'new-menu', title: t('keppler.actions.show') do
              %i.icon-eye
              = t('keppler.actions.show')
        - if can?(KepplerChat::Conversation).update?
          %li
            = link_to edit_admin_chat_conversation_path(conversation), class: 'new-menu', title: t('keppler.actions.edit') do
              %i.icon-pencil
              = t('keppler.actions.edit')
        - if can?(KepplerChat::Conversation).clone?
          %li
            = link_to admin_chat_conversation_clone_path(conversation), class: 'new-menu', title: t('keppler.actions.clone') do
              %i.icon-docs
              = t('keppler.actions.clone')
        - if can?(KepplerChat::Conversation).destroy?
          %li
            = link_to admin_chat_conversation_path(conversation), class: 'new-menu', title: t('keppler.actions.delete'), method: :delete, data: { confirm: t("keppler.messages.data_confirm") } do
              %i.icon-trash
              = t('keppler.actions.delete')

    %td{:style => 'width: 5%;'}
      %a.drop{:href=>"#"}
        %i.icon-cursor-move
